<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#8FF4F2D6" /> <!-- Semi-transparent grey color when pressed -->
            <corners android:radius="30dp" />
        </shape>
    </item>
  <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#8ABCC8E8" /> <!-- Semi-transparent grey color when pressed -->
            <corners android:radius="30dp" />
        </shape>
    </item>


    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color when not pressed -->
        </shape>
    </item>
</selector>