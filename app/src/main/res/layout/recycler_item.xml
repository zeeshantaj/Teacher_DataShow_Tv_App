<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_item"
    android:backgroundTint="@color/blueshade"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:text="Name:"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:text="ifuadshhasklhafskhasdhfsioadhoiahsdfoihafihoisdhoidsahoidashfo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/textView7"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Department:"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_below="@id/textView7"/>

        <TextView
            android:id="@+id/departText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:text="oifdsaiodfhasifhiohsdoifhio"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@id/nametxt"
            android:layout_toEndOf="@id/textView6"/>


        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Duration:"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:layout_marginStart="6dp"
            android:layout_below="@id/textView6"/>

        <TextView
            android:id="@+id/durationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1"
            android:text="fdiyhosaifoiasdhfoihaso"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/departText"
            android:layout_toEndOf="@id/textView15"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Location:"
            android:textColor="@color/white"

            android:layout_marginStart="6dp"
            android:textSize="16sp"
            android:layout_below="@id/textView15"/>

        <TextView
            android:id="@+id/locationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="lkfdsjakljldksfj"
            android:layout_marginTop="5dp"
            android:layout_below="@id/durationTxt"
            android:layout_toEndOf="@id/textView4"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Subject:"
            android:textColor="@color/white"

            android:layout_marginStart="6dp"
            android:textSize="18sp"
            android:layout_below="@id/textView4"/>
        <TextView
            android:id="@+id/subjectTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:maxLines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="lkfdsjakljldksfj"
            android:layout_marginTop="8dp"
            android:layout_below="@id/locationTxt"
            android:layout_toEndOf="@id/textView5"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Topic:"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"

            android:textSize="16sp"
            android:layout_below="@id/textView5"/>


        <TextView
            android:id="@+id/topopicTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="lkfdsjakljldksfj"
            android:layout_marginTop="5dp"
            android:layout_below="@id/subjectTxt"
            android:layout_toEndOf="@id/textView8"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Started At:"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:layout_marginStart="6dp"
            android:layout_below="@id/textView8"/>
        <TextView
            android:id="@+id/startedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="lkfdsjakljldksfj"
            android:layout_marginTop="5dp"
            android:layout_below="@id/topopicTxt"
            android:layout_toEndOf="@id/txt"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:text="Time Left:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/countTImer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startedTxt"
            android:layout_alignEnd="@+id/startedTxt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:layout_toEndOf="@id/textView14"
            android:text="0000000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>